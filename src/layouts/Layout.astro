---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// ---!!! ADD THIS LINE TO IMPORT YOUR STYLES !!!---
import '../styles/global.css';

// --- Props ---
const { page, siteSettings } = Astro.props;

// --- SEO Logic ---
const seoTitle = page?.title || 'EvolveNord';
const seoDescription = page?.seo_description || 'Default description for EvolveNord';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={seoDescription} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{seoTitle}</title>

		<ViewTransitions />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Adamina&family=Inter:wght@400;500;600;700;800&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body class="bg-primary text-white font-inter">
		<Header siteSettings={siteSettings} />
		<slot />
		<Footer siteSettings={siteSettings} />
	</body>
</html>