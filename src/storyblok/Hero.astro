---
// We no longer need any imports from storyblok.
const { blok } = Astro.props; // This 'blok' is our "shared.hero" component data from Strapi

// The data is now directly on the 'blok' object, no '.content' needed.
const headline = blok.headline;
const lead = blok.lead;
const image = blok.image; // This will be an object from Strapi
const button = blok.button; // This will be our button component data
---
<section class="group">
  <div class="relative min-h-[82vh] flex items-end pt-40 before:absolute before:inset-0 before:bg-black/55 before:mix-blend-multiply before:z-10">
    <!-- Image handling will need to be updated for Strapi's image format -->
    {image && image.data && (
      <picture class="absolute z-0 w-full h-full object-cover object-top">
        <img
          src={import.meta.env.PUBLIC_STRAPI_URL + image.data.attributes.url}
          alt={image.data.attributes.alternativeText || ""}
          class="absolute z-0 w-full h-full object-cover object-top"
        />
      </picture>
    )}

    <div class="relative z-20 w-full pt-10">
      <div class="max-w-[624px] mx-auto mb-28 px-6 flex flex-col gap-y-8 justify-center items-center">
        <div class="max-w-[624px] text-center">
          <h2 class="text-white text-3xl md:text-5xl leading-[110%] -tracking-[1.92px] font-adamina mb-4">
            {headline}
          </h2>

          {lead && (
            <p class="text-white leading-[150%] -tracking-[0.32px]">
              {lead}
            </p>
          )}
        </div>
        
        <!-- We will handle the button and partners components later -->
        {/* {blok.button && ...} */}
      </div>
    </div>
  </div>
</section>