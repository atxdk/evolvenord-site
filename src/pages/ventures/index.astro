---
import { getCollection } from 'astro:content'
import BaseLayout from '../../layouts/BaseLayout.astro'

const ventures = (await getCollection('ventures')).filter((v) => !v.data.draft)
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime())
---

<BaseLayout
  title="Our Ventures - Evolvenord"
  description="Explore the innovative ventures we've built and launched. From SaaS products to digital tools, see what we're building."
>
  <div class="container mx-auto px-6 py-32">
    <h1 class="text-4xl md:text-6xl font-adamina mb-8">Our Ventures</h1>
    <p class="text-xl opacity-65 mb-16 max-w-2xl">
      We don't just consultâ€”we build. Explore the innovative ventures we've created and launched.
    </p>

    <div class="grid md:grid-cols-3 gap-8">
      {ventures.map((venture) => (
        <article class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-lg transition-shadow">
          {venture.data.coverImage && (
            <img
              src={venture.data.coverImage}
              alt={venture.data.title}
              class="w-full h-48 object-cover"
            />
          )}
          <div class="p-6">
            <div class="flex items-center gap-2 mb-3">
              <span class={`text-xs px-3 py-1 rounded-full ${
                venture.data.status === 'active' ? 'bg-green-100 text-green-700' :
                venture.data.status === 'beta' ? 'bg-blue-100 text-blue-700' :
                'bg-gray-100 text-gray-700'
              }`}>
                {venture.data.status}
              </span>
              <span class="text-sm opacity-65">{venture.data.category}</span>
            </div>
            <h2 class="text-2xl font-adamina mb-3">
              <a href={`/ventures/${venture.slug}`} class="hover:text-primary transition-colors">
                {venture.data.title}
              </a>
            </h2>
            <p class="opacity-65 mb-4">{venture.data.description}</p>
            <div class="flex flex-wrap gap-2 mb-4">
              {venture.data.stack.slice(0, 3).map((tech) => (
                <span class="text-xs px-3 py-1 bg-gray-100 rounded-full">
                  {tech}
                </span>
              ))}
            </div>
            <a
              href={venture.data.website}
              target="_blank"
              rel="noopener noreferrer"
              class="text-primary hover:underline inline-flex items-center gap-1"
            >
              Visit Website
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M7 17L17 7M7 7h10v10"/>
              </svg>
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>
</BaseLayout>

