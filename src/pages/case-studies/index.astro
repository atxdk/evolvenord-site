---
import { getCollection } from 'astro:content'
import BaseLayout from '../../layouts/BaseLayout.astro'

const caseStudies = (await getCollection('case-studies')).filter((cs) => !cs.data.draft)
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime())
---

<BaseLayout
  title="Case Studies - Evolvenord"
  description="Explore our client success stories and see how we've helped businesses achieve their digital marketing goals."
>
  <div class="container mx-auto px-6 py-32">
    <h1 class="text-4xl md:text-6xl font-adamina mb-8">Case Studies</h1>
    <p class="text-xl opacity-65 mb-16 max-w-2xl">
      Explore our client success stories and see how we've helped businesses achieve their digital marketing goals.
    </p>

    <div class="grid md:grid-cols-2 gap-8">
      {caseStudies.map((caseStudy) => (
        <article class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-lg transition-shadow">
          {caseStudy.data.coverImage && (
            <img
              src={caseStudy.data.coverImage}
              alt={caseStudy.data.title}
              class="w-full h-64 object-cover"
            />
          )}
          <div class="p-6">
            <div class="flex items-center gap-2 mb-3">
              <span class="text-sm px-3 py-1 bg-primary/10 text-primary rounded-full">
                {caseStudy.data.industry}
              </span>
              <span class="text-sm opacity-65">{caseStudy.data.client}</span>
            </div>
            <h2 class="text-2xl font-adamina mb-3">
              <a href={`/case-studies/${caseStudy.slug}`} class="hover:text-primary transition-colors">
                {caseStudy.data.title}
              </a>
            </h2>
            <p class="opacity-65 mb-4">{caseStudy.data.description}</p>
            <div class="flex flex-wrap gap-2 mb-4">
              {caseStudy.data.services.map((service) => (
                <span class="text-xs px-3 py-1 bg-gray-100 rounded-full">
                  {service}
                </span>
              ))}
            </div>
            <div class="font-medium text-primary">
              {caseStudy.data.results}
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</BaseLayout>

