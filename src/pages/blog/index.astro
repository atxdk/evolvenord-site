---
import { getCollection } from 'astro:content'
import BaseLayout from '../../layouts/BaseLayout.astro'

const blogPosts = (await getCollection('blog')).filter((post) => !post.data.draft)
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime())
---

<BaseLayout
  title="Blog - Evolvenord"
  description="Insights, strategies, and updates from our team on digital marketing, venture building, and more."
>
  <div class="container mx-auto px-6 py-32">
    <h1 class="text-4xl md:text-6xl font-adamina mb-8">Blog</h1>
    <p class="text-xl opacity-65 mb-16 max-w-2xl">
      Insights, strategies, and updates from our team on digital marketing, venture building, and more.
    </p>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {blogPosts.map((post) => (
        <article class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-lg transition-shadow">
          {post.data.coverImage && (
            <img
              src={post.data.coverImage}
              alt={post.data.title}
              class="w-full h-48 object-cover"
            />
          )}
          <div class="p-6">
            <time class="text-sm opacity-65">
              {post.data.publishDate.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
              })}
            </time>
            <h2 class="text-2xl font-adamina mt-2 mb-3">
              <a href={`/blog/${post.slug}`} class="hover:text-primary transition-colors">
                {post.data.title}
              </a>
            </h2>
            <p class="opacity-65 mb-4">{post.data.description}</p>
            {post.data.tags && post.data.tags.length > 0 && (
              <div class="flex flex-wrap gap-2">
                {post.data.tags.map((tag) => (
                  <span class="text-xs px-3 py-1 bg-gray-100 rounded-full">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </div>
        </article>
      ))}
    </div>
  </div>
</BaseLayout>

