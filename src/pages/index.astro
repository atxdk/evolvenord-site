---
import BaseLayout from '../layouts/BaseLayout.astro'
import Hero from '../components/sections/Hero.astro'
import PartnersSection from '../components/sections/PartnersSection.astro'
import FeaturesSection from '../components/sections/FeaturesSection.astro'
import StatsSection from '../components/sections/StatsSection.astro'
import TestimonialsSection from '../components/sections/TestimonialsSection.astro'
import BannerCta from '../components/sections/BannerCta.astro'

const partners = [
  { name: 'Partner 1', logo: '/partners/partner1.svg', link: '#' },
  { name: 'Partner 2', logo: '/partners/partner2.svg', link: '#' },
  { name: 'Partner 3', logo: '/partners/partner3.svg', link: '#' },
  { name: 'Partner 4', logo: '/partners/partner4.svg', link: '#' },
  { name: 'Partner 5', logo: '/partners/partner5.svg', link: '#' },
]

const features = [
  {
    title: 'Digital Strategy',
    description: 'We help you define a clear digital strategy that aligns with your business goals and drives measurable results.',
    image: '/images/feature-strategy.jpg',
    imageAlt: 'Digital Strategy',
  },
  {
    title: 'Performance Marketing',
    description: 'Data-driven campaigns that maximize your ROI across all digital channels including PPC, SEO, and social media.',
    image: '/images/feature-marketing.jpg',
    imageAlt: 'Performance Marketing',
  },
  {
    title: 'Venture Building',
    description: 'We build and launch innovative digital products from concept to market, leveraging our expertise and resources.',
    image: '/images/feature-ventures.jpg',
    imageAlt: 'Venture Building',
  },
]

const stats = [
  { number: '150+', label: 'Projects Delivered', primary: true },
  { number: '50+', label: 'Happy Clients', primary: false },
