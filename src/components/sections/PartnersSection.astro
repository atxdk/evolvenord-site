---
const { title, partners } = Astro.props
---

<div class="flex flex-col md:flex-row gap-8 items-center justify-between w-full py-16">
  {title && <h2 class="text-white shrink-0">{title}</h2>}

  <ul class="grid grid-cols-2 sm:grid-cols-5 gap-x-5 gap-y-10">
    {partners && partners.map((partner) => (
      <li>
        <a href={partner.link || '#'}>
          <img
            src={partner.logo || '/assets/partner-placeholder.svg'}
            alt={partner.name || 'Partner'}
            class="h-[24px] opacity-65"
          />
        </a>
      </li>
    ))}
  </ul>
</div>

