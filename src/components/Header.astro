---
const { siteSettings } = Astro.props; // Accept the prop from the Layout

// Safely access the logo and links using optional chaining (?.)
const logo = siteSettings?.logo;
const navLinks = siteSettings?.header_links || [];
---
<header class="absolute top-0 left-0 w-full z-30">
  <div class="container mx-auto px-6 py-8 flex justify-between items-center">
    <a href="/">
      {logo?.data && (
        <img 
          src={import.meta.env.PUBLIC_STRAPI_URL + logo.data.attributes.url} 
          alt={logo.data.attributes.alternativeText || 'EvolveNord Logo'} 
          class="max-w-[140px]" 
        />
      )}
    </a>
    <nav>
      <ul class="hidden md:flex items-center gap-8">
        {navLinks.map(link => (
          <li>
            <a href={link.url} class="hover:text-gray-300 transition-colors">{link.label}</a>
          </li>
        ))}
      </ul>
    </nav>
    <!-- Mobile menu button etc. can be added here -->
  </div>
</header>
