---
const { title, icon, variant = 'default' } = Astro.props

const variants = {
  default: 'text-black',
  glass: 'p-2 bg-black/30 backdrop-blur border border-transparent text-white [border-image:linear-gradient(to_right,#ffffff14,#ffffff17)_1]',
}
---

<h2 class={`inline-flex gap-4 items-center ${variants[variant]}`}>
  <div class="bg-primary p-1 rounded-sm">
    {icon && <img src={icon} alt="" class="w-[25px] h-[25px]" />}
  </div>
  <span>{title}</span>
</h2>
