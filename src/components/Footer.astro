---
// Step 1: Accept the siteSettings prop from the Layout
const { siteSettings } = Astro.props;

// Step 2: Safely access the logo data using optional chaining (?.) to prevent errors if it's not there
const logo = siteSettings?.logo;

// Step 3: Safely access footer/social links. We'll add these to Strapi later,
// but this code makes the component ready for them and prevents crashes.
const footerLinks = siteSettings?.footer_links || []; 
const socialLinks = siteSettings?.social_links || [];
---
<footer class="bg-black">
  <div class="container mx-auto px-6 py-24 flex flex-col items-center gap-16">
    <a href="/">
      {logo?.data && (
        <img 
          src={import.meta.env.PUBLIC_STRAPI_URL + logo.data.attributes.url} 
          alt={logo.data.attributes.alternativeText || 'EvolveNord Logo'} 
          class="max-w-[140px]" 
        />
      )}
    </a>
    <nav>
      <ul class="flex items-center gap-8">
        {footerLinks.map(link => (
          <li>
            <a href={link.url} class="hover:text-gray-300 transition-colors">{link.label}</a>
          </li>
        ))}
      </ul>
    </nav>
    <div class="text-center opacity-65">
      <p>&copy; {new Date().getFullYear()} EvolveNord. All rights reserved.</p>
    </div>
  </div>
</footer>